<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.ProfileLandingActivity">


    <LinearLayout
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_weight="1"
                android:text="Phone Number"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/l_phn_no"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:layout_marginLeft="16dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_weight="1"
                android:text="Password"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/l_pass"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:gravity="right"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="true"
            android:hint="Name"
            app:hintTextColor="@color/colorPrimary"
            app:startIconCheckable="true"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            app:counterMaxLength="50"
            app:counterEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/l_update_name"
                android:textSize="18dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="true"
            android:hint="collage name"
            app:startIconCheckable="true"
            app:hintTextColor="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_baseline_school_24"
            app:counterMaxLength="100"
            app:counterEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:textSize="18dp"
                android:inputType="text"
                android:id="@+id/l_update_collage_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="true"
            android:hint="hsc exam year"
            app:startIconCheckable="true"
            app:hintTextColor="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_baseline_schedule_24"
            app:counterMaxLength="10"
            app:counterEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:textSize="18dp"
                android:inputType="number"
                android:id="@+id/l_update_hsc_exam_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/l_btnUpdate"
            android:text="Update Profile"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:background="@drawable/border_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>